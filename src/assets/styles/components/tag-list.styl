//
// Tag List
// --------------------------------------------------

@require "../base/variables";

.tag-list
  list-style none
  margin 0
  padding-left 0

.tag-list-item
  display inline-block
  margin 0 10px 5px 0

  &:last-child
    margin-right 0

  a
    display block
    border 1px solid $gray-light
    border-radius 3px
    text-decoration none
    color $gray
    background-color $content-bg
    padding 6px 9px

    &:hover
      color #fff
      border-color $gray
      background-color $gray
