//
// Global footer
// --------------------------------------------------

@require "../base/variables";

.global-footer
  text-align center
  box-shadow inset 0 4px 8px darken($footer-bg, 5%)
  color #cdcfcf
  background-color $footer-bg
  padding 40px

  p
    margin 0

  a
    color #cdcfcf
    text-decoration none

    &:hover
      color $gray-lighter

    &:active
      text-decoration underline
