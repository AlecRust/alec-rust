//
// Tag List
// --------------------------------------------------

@require "../base/variables";

.tag-list
  list-style none
  margin 0
  padding-left 0

  // Additional specificity to override `.entry-content li`
  .tag-list-item
    margin 0 10px 10px 0

.tag-list-item
  font-size $font-size-base - 1
  display inline-block

  &:last-child
    margin-right 0

  a
    display block
    border 1px solid $gray-light
    border-radius 3px
    text-decoration none
    color $gray
    background-color $content-bg
    padding 6px 9px

    &:hover
      color #fff
      border-color $gray
      background-color $gray
