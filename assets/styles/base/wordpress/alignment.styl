//
// WordPress Core alignment
// --------------------------------------------------

@require "../variables"

.alignleft,
.alignright
  display block
  margin-bottom 20px

.aligncenter
  display block
  margin-left auto
  margin-right auto

.alignnone
  margin 5px 20px 20px 0

@media (min-width $screen-phone)
  .alignleft
    float left
    max-width 35%
    margin 0 20px 20px 0

  .alignright
    float right
    max-width 35%
    margin 0 0 20px 20px
